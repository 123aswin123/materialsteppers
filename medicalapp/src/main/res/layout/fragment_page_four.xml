                    <RadioButton
                        android:id="@+id/infero_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/infero_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"
